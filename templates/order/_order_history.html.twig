{% for order in orders %}
    <div class="row">
        <h4>Order ID: {{ order.id }} : {{ order.date }}</h4>
        {% set sum = 0 %}
        {% for item in order.items %}
            <div class="col-md-4 ">
                <div class="card mb-4 shadow-sm">
                    <img src="{{ item.img}}" class="img-fluid" alt="Pupa">
                    <div class="card-body">
                        <h4>{{ item.name }}</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>{{ item.cost }} rub</h5>
                            {% set sum = sum + item.cost %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <h4>Total: {{ sum }}</h4>
        <hr>
    </div>
{% endfor %}
