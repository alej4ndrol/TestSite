{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block page %}{{ page }}{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div class="row">
        {% for item in items %}
            <div class="col-md-4 ">
                <a href="{{ path('app_shop_item', {'id': item.id}) }}" class="itemClass text-decoration-none text-dark">
                    <div class="card mb-4 shadow-sm">
                        <img src="{{ item.itemImageSrc}}" class="img-fluid" alt="Pupa">
                        <div class="card-body">
                            <h4>{{ item.name }}</h4>

                            <div class="d-flex justify-content-between align-items-center">
                                <h5>{{ item.price }} rub.</h5>
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <a href="{{ path('app_cart_add', {'id': item.id}) }}" type="button" class="btn btn-primary col-md-3">Add to cart</a>
                                {% else %}
                                    <a href="{{ path('app_login') }}" type="button" class="btn btn-warning col-md-3">Sign in</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
